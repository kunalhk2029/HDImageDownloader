<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="15dp"
    android:layout_margin="15dp"
    tools:context="com.app.imagedownloader.framework.presentation.ui.main.Payment.Offerui1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline29"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:alpha="0.9"
            android:background="@drawable/gradientp1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline29"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/dullwhite"
            android:textSize="15sp"
            android:id="@+id/premium"
            android:text="Premium"
            android:padding="2dp"
            android:gravity="center" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/premium"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"
                android:text="Ads-Free"
                android:textSize="15sp"
                android:padding="7dp"
                android:id="@+id/offerno3" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="0dp"
                android:id="@+id/er3"
                app:layout_constraintBottom_toBottomOf="@id/offerno3"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="@id/offerno3"
                android:src="@drawable/ic_baseline_check_24"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/grey"
            android:textSize="15sp"
            android:id="@+id/free"
            android:text="Free"
            android:padding="2dp"
            android:gravity="center" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/free"
            app:layout_constraintBottom_toTopOf="@id/guideline29">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/offerno"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="@id/offerno"
                android:src="@drawable/wrongred"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/black"
                android:text="Ads-Free"
                android:textSize="15sp"
                android:padding="7dp"
                android:id="@+id/offerno" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="0dp"
                android:id="@+id/er1"
                app:layout_constraintBottom_toBottomOf="@id/offerno"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="@id/offerno"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>